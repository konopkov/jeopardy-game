// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x", "linux-arm64-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id         String @id @default(uuid())
  categoryId Int
  name       String
  game       Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId     String
}

model Player {
  id         String   @id @default(uuid())
  playerName String
  createdAt  DateTime @default(now())
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId     String
  score      Int
}

model Game {
  id             String     @id @default(uuid())
  title          String
  ownerId        String
  presentationId String
  shortId        String     @unique
  createdAt      DateTime   @default(now())
  players        Player[]
  categories     Category[]
  buzzer         Buzzer?
  answers        Answer[]
}

model Buzzer {
  gameId      String  @id @unique
  isAnswering Boolean
  playerName  String?
  game        Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

model Answer {
  id         String @id @default(uuid())
  gameId     String
  categoryId Int
  price      Int
  playerName String
  game       Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
}
